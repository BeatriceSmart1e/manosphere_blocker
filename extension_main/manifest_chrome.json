{
  "manifest_version": 3,
  "name": "Say Goodbye to the Sigmas",
  "version": "1.0",
  "description": "This extension will eliminate harmful manosphere content.",
  "permissions": [
    "webRequest",
    "activeTab",
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "scripts/bg_script.js"
  },
  "action": {
    "default_popup": "menu.html",
    "default_icon": "hitch_logo.png"
  },
  "content_scripts": [
    {
      "js": [
        "scripts/content.js"
      ],
      "matches": [
        "*://*/*"
      ],
      "exclude_globs": [
        "*://*.google.*/*",
        "*://guidetothemanosphere.com/*",
        "*://*.wikipedia.*/*",
        "*://*.britannica.*/*",
        "*://*.*.edu/*",
        "*://*.*.org/*",
        "*://*.*.gov/*"
      ]
    }
  ]
}